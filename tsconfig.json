{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/index.ts",
    "src/tools/**/*",
    "src/core/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/server/mobile-api.ts",
    "src/server/http-server.ts",
    "**/*.test.ts",
    "test-*.js"
  ]
}
